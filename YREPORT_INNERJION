REPORT YREPORT_INNERJION.

*TO CREATE A LINE TYPE SOME FIELD OF MARA AMND MARC.

TYPES : BEGIN OF LTY_MAT,
        MATNR TYPE MATNR,
        MTART TYPE MTART,
        MBRSH TYPE MBRSH,
        MATKL TYPE MATKL,
        MEINS TYPE MEINS,
        WERKS TYPE WERKS_D,
        EKGRP TYPE EKGRP,
        MINBE TYPE MINBE,
        BSTMI TYPE BSTMI,
  END OF LTY_MAT.

* TO CREATE AN INTERNAL TABLE AND WA_AREA FOR MARA, MARC
DATA : IT_MARA TYPE TABLE OF LTY_MAT,
       WA TYPE LTY_MAT.



*FETCH THE MATERIAL MASTER  DATA AND PLANT DATA FROM MARA AND MARC.
*SELECT A~MATNR MTART MBRSH MATKL MEINS WERKS EKGRP MINBE BSTMI FROM MARA
*   AS A INNER JOIN MARC AS B ON A~MATNR = B~MATNR
*   INTO TABLE IT_MARA.

*SELECT A~MATNR MTART MBRSH MATKL MEINS WERKS EKGRP MINBE FROM MARA
*  AS A INNER JOIN MARC AS B ON A~MATNR = B~MATNR
*  INTO TABLE IT_MARA.

SELECT A~MATNR MTART MBRSH MATKL MEINS WERKS EKGRP MINBE FROM MARA
  AS A INNER JOIN MARC AS B ON A~MATNR = B~MATNR
  INTO TABLE IT_MARA.


* TO DISPLAY THE DATA
  IF SY-SUBRC = 0.
    WRITE :/ 'NO. OF RECORD FETCHED = ', SY-DBCNT.
    LOOP AT IT_MARA INTO WA.
      WRITE : / WA-MATNR,
               WA-MTART,
               WA-MBRSH,
               WA-MATKL,
               WA-MEINS,
               WA-WERKS,
               WA-EKGRP,
               WA-MINBE,
               WA-BSTMI.
       ENDLOOP.
      ENDIF.
