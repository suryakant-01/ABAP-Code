REPORT ZVARIABLES_PROG1.

DATA CITY(8) TYPE C.
DATA DATE TYPE D.
DATA V1 TYPE I.
DATA MOBILE(10) TYPE N.
DATA AMOUNT TYPE P DECIMALS 3.
DATA TIME TYPE T.
DATA STR TYPE STRING.

CITY = 'MUMBAI'.
DATE = '08102024'. "YYYYMMDD
V1 = 50.
MOBILE = '766797615'.
AMOUNT = '1000.503'.
TIME = '114010'. "HHMMSS
STR = 'SAP ABAP IS PROGRAMMING LANGUAGE WHICH USED TO DEVELOP BUSINESS APPLICATION'.

WRITE / CITY.
WRITE / DATE.
WRITE / V1 LEFT-JUSTIFIED.
WRITE / MOBILE.
WRITE / AMOUNT LEFT-JUSTIFIED.
WRITE / TIME.
WRITE / STR.
