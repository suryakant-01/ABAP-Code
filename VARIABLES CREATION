*VARIABLES USING ULINE AND LEFT JUSTIFIED AND COLOR
REPORT ZVARIABLES_PROG2.

DATA INS_NAME(12) TYPE C.
DATA TRAINER(12) TYPE C.
DATA DOMAIN(10) TYPE C.
DATA YEAR_EX TYPE I.
DATA BATCH_TIME TYPE T.
DATA MOBILE(10) TYPE N.
DATA CITY(16) TYPE C.
DATA FEES TYPE P DECIMALS 2.
DATA ADDRESS TYPE STRING.

INS_NAME = 'VERSION_IT'.
TRAINER = 'IRFAN SIR'.
DOMAIN = 'SAP'.
YEAR_EX = '20'.
BATCH_TIME = '101000'. "HHMMSS
MOBILE = '7013774973'.
CITY = 'HYDERABAD'.
FEES = '40000.00'.
ADDRESS = 'AMEERPET, HYDERABAD, INDIA'.


WRITE / INS_NAME COLOR 5.
ULINE.
WRITE / TRAINER.
WRITE / DOMAIN.
WRITE / YEAR_EX LEFT-JUSTIFIED.
WRITE / BATCH_TIME.
WRITE / MOBILE.
WRITE / CITY.
WRITE / FEES LEFT-JUSTIFIED.
ULINE.
WRITE / ADDRESS COLOR 5.
ULINE.
